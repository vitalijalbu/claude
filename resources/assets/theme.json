{
  "theme": "light",
  "token": {
    "fontFamily": "'Inter', sans-serif",
    "colorPrimary": "#1677ff",
    "colorSuccess": "#34C759",
    "colorWarning": "#FF9500",
    "colorError": "#FE5C5C",
    "colorText": "#222",
    "colorBgBase": "#fff",
    "borderRadius": 8,
    "fontSize": 14,
    "controlHeight": 32,
    "paddingContentHorizontal": 16,
    "paddingContentVertical": 10,
    "motionDurationMid": "0.15s"
  },
  "components": {
    "Layout": {
      "bodyBg": "#fff",
      "siderBg": "#fff",
      "lightSiderBg": "#f9f9f9",
      "headerHeight": 40,
      "footerPadding": 2,
      "headerBg": "#fff",
      "headerPadding": "0 8px",
      "footerBg": "#fff"
    },
    "Typography": {
      "fontSizeHeading1": 30,
      "fontSizeHeading2": 26,
      "fontSizeHeading3": 20,
      "fontSizeHeading4": 18,
      "fontSizeHeading5": 16,
      "marginXS": 0,
      "marginXXS": 0,
      "titleMarginBottom": 0,
      "titleMarginTop": 0
    },
    "Button": {
      "colorLink": "#1677ff",
      "bgDanger": "#e11719",
      "controlOutline": 0
    },
    "Statistic": {
      "contentFontSize": 22
    },
    "Collapse": {
      "headerBg": "#fff"
    }, 
    "Checkbox": {
      "controlInteractiveSize": 18,
      "borderRadiusSM": 6
    },
    "Avatar": {
      "colorTextPlaceholder": "#E8F3F1"
    },
    "Card": {
      "colorBorderSecondary": "#d9d9d9",
      "padding": 12,
      "paddingLG": 12
    },
    "Table": {
      "headerBg": "transparent",
      "padding": 6
    },
    "Divider": {
      "colorSplit": "rgb(0 0 0 / 15%)",
      "marginLG": 12
    },
    "Form": {
      "itemMarginBottom": 20,
      "labelColonMarginInlineEnd": 4,
      "fontSizeLG": 18
    },
    "Radio": {
      "controlHeight": 20
    },
    "Select": {
      "colorBgContainer": "#fff"
    },
    "Input": {
      "boxShadow": "none",
      "colorBgContainer": "#F9FAFB"
    }, 
    "InputNumber": {
      "colorBgContainer": "#F9FAFB"
    },
    "DatePicker": {
      "colorBgContainer": "#F9FAFB"
    },
    "TimePicker": {
      "colorBgContainer": "#F9FAFB"
    },
    "Dropdown": {
      "dropdownWidth": 300,
      "padding": 0,
      "boxShadowSecondary": "0 0px 6px 1px rgba(0, 0, 0, 0.08)"
    },
    "Menu": {
      "itemActiveBg": "#1677ff",
      "lineWidth": 0,
      "lineHeight": 0,
      "margin": 2,
      "lineWidthFocus": 0,
      "dropdownWidth": 200,
      "activeBarBorderWidth": 0,
      "itemHeight": 32,
      "inlineIndent": 2,
      "itemPaddingInline": 2,
      "itemMarginInline": 2,
      "itemMarginBlock": 6,
      "iconMarginInlineEnd": 2,
      "itemBg": "transparent",
      "iconSize": 20,
      "collapsedIconSize": 20,
      "groupTitleFontSize": 10,
      "groupTitleColor": "rgba(0,0,0,0.30)"
    }
  }
}
