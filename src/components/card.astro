---
const { 
  titleClass = "text-xl font-semibold", 
  contentClass = "text-gray-700", 
  footerClass = "text-sm text-gray-500", 
  className 
} = Astro.props;

const titleId = Astro.props.titleId ?? `card-title-${Math.random().toString(36).substring(2, 8)}`;
---

<div 
  class={`card border border-outline rounded-lg p-4 bg-white ${className}`} 
  role="region" 
  aria-labelledby={titleId}
  itemscope 
>
  <div class={`card-title ${titleClass}`} id={titleId} itemprop="headline">
    <slot name="title" />
  </div>

  <div class={`card-content ${contentClass}`} itemprop="text">
    <slot name="content" />
  </div>

  <div class={`card-footer ${footerClass}`} role="contentinfo">
    <slot name="footer" />
  </div>
</div>
