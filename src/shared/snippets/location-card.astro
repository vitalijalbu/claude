---
import { IconHeart } from "@/icons/index";
const { data } = Astro.props;
const titleId = `fav-title-${data?.id}`;
---

<article
  class="group flex w-full flex-col overflow-hidden border rounded-xl border-outline bg-white hover:shadow-sm"
  aria-labelledby={titleId}
>
  <a
    href={data?.slug}
    class="p-4 flex items-center gap-2"
    aria-labelledby={titleId}
    aria-label={`Vai alla pagina della cittÃ : ${data?.name}`}
  >
    <IconHeart class="shrink-0" aria-hidden="true" focusable="false" />
    <h5
      id={titleId}
      class="font-semibold text-gray-900 truncate"
    >
      {data?.name}
    </h5>
  </a>
</article>
