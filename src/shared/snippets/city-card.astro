---
import { Picture } from '@/components/index';
const { data } = Astro.props;
---

<article class="group bg-white rounded-lg overflow-hidden hover:shadow-sm transition-shadow border border-gray-200">
  <a
    href={`/${data?.slug}`}
    class="block"
    aria-label={`Esplora ${data?.name}`}>

    <!-- Content -->
    <div class="p-3">
      <h3 class="font-semibold text-gray-900 group-hover:text-blue-600 transition-colors line-clamp-1">
        {data?.name}
      </h3>
      
      {data?.region && (
        <p class="text-xs text-gray-500 mt-1">
          {data?.region?.name}
        </p>
      )}
    </div>
  </a>
</article>