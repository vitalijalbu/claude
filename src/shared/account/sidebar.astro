---
import { IconUserCircle, IconLogout, IconHeart, IconStar, IconSettings } from '@/icons/index';

const menuItems = [
	{ route: '/account', icon: IconUserCircle, label: 'Il mio Account' },
	{ route: '/account/favorites', icon: IconHeart, label: 'Annunci preferiti' },
	{ route: '/account/reviews', icon: IconStar, label: 'Le mie recensioni' },
	{ route: '/account/settings', icon: IconSettings, label: 'Impostazioni' },
];
---

<nav aria-label="Account menu">
	<ul class="flex flex-col gap-0.5 min-w-60">
		{
			menuItems.map((item) => (
				<li class="flex items-center py-1.5 px-2.5 rounded-md align-middle select-none font-sans transition-all duration-300 ease-in aria-disabled:opacity-50 aria-disabled:pointer-events-none bg-transparent text-stone-600 hover:text-stone-800 dark:hover:text-white hover:bg-stone-200 focus:bg-stone-200 focus:text-stone-800 dark:focus:text-white dark:data-[selected=true]:text-white dark:bg-opacity-70">
					<a href={item.route} class="flex items-center gap-2">
						<item.icon />
						<span>{item.label}</span>
					</a>
				</li>
			))
		}
		<li
			class="flex items-center py-1.5 px-2.5 rounded-md align-middle select-none font-sans transition-all duration-300 ease-in aria-disabled:opacity-50 aria-disabled:pointer-events-none bg-transparent text-stone-600 hover:text-stone-800 dark:hover:text-white hover:bg-stone-200 focus:bg-stone-200 focus:text-stone-800 dark:focus:text-white dark:data-[selected=true]:text-white dark:bg-opacity-70">
			<form
				method="POST"
				action="/logout">
				<button
					type="submit"
					class="flex items-center gap-2"
					aria-label="Log out">
					<IconLogout />
					<span>Esci</span>
				</button>
			</form>
		</li>
	</ul>
</nav>
